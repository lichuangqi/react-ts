{
  "compilerOptions": {
    "noImplicitAny": false, //不需要显示地声明变量的类型
    "target": "es5",//编译后的js版本
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],//库文件
    "allowJs": true, // 允许混合编译js文件
    "skipLibCheck": true,
    "esModuleInterop": true, //允许使用commonjs的方式引入文件
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",//模块系统
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,//文件作为单独模块使用
    "noEmit": true,// 当发生错误的时候，编译器不要生成js的代码
    "jsx": "react-jsx"// 允许编译器支持编译react代码
  },
  "include": [
    "src"
  ]
}
